function palbyte( &$pal )
{
	$len = strlen($pal);
	for ( $i=0; $i < $len; $i += 4 )
		$pal[$i+3] = BYTE;
	return;
}

function get_big4( &$buf, &$file, &$pos, $cnt )
{
	while ( count($buf) < $cnt )
	{
		$b = ord( $file[$pos] );
			$pos++;
		$buf[] = ($b >> 4) & BIT4;
		$buf[] = ($b >> 0) & BIT4;
	}
	return;
}

function save_txt( &$file, &$sect, $dir )
{
	if ( empty($sect[1]) )
		return;
	printf("== save_txt( $dir )\n");

	foreach ( $sect[1] as $k => $v )
	{
		$end = str2int($file, $v-4, 4);
		$sub = substr($file, $v, $end-$v);
		$txt = '';

		$siz = strlen($sub);
		$pos = 0;
		while ( $pos < $siz )
		{
			$len = ord($sub[$pos]);
			$s = substr($sub, $pos+1, $len);

			$pos += (1 + $len);
			$txt .= "$s\n";
		} // while ( $pos < $siz )

		$fn = sprintf('%s/%04d.txt', $dir, $k);
		trace("save text = %s\n", $fn);
		save_file($fn, $txt);
	} // foreach ( $sect[1] as $k => $v )

	return;
}

function scnsect( &$file )
{
	$sect = array();
	$sect[1] = array();

	$pos = 0;
	while (1)
	{
		if ( substr($file,$pos+1,3) !== "\x0043" )
			return $sect;

		$id = ord( $file[$pos] );
		$nx = str2int($file, $pos+4, 4);
		trace("%8x , %8x , %2x\n", $pos, $nx-$pos-8, $id);

		if ( $id == 1 )
			$sect[1][] = $pos + 8;
		else
		{
			if ( isset( $sect[$id] ) )
				return php_error('DUP 43 @ %x = %x', $pos, $id);
			$sect[$id] = $pos + 8;
		}

		$pos = $nx;
		if ( $pos == 0 )
			break;
	} // while (1)

	return $sect;
}
